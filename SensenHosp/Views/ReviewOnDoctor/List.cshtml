@model IEnumerable<SensenHosp.Models.ReviewOnDoctor>

@{
    ViewData["Title"] = "List";
}

<h2 class="heading heading-h2">List</h2>
<a asp-action="Create" class="submit">Create New</a>
<br />
<table class="table table-hover">
    <thead class="text-light bg-primary">
        <tr>
            <th class="alert-title-table" colspan="2">
                @Html.DisplayNameFor(model => model.Physician.physicianName)
            </th>
            <th class="alert-title-table" colspan="2">
                @Html.DisplayNameFor(model => model.Message)
            </th>
            <th class="alert-title-table" colspan="2"></th>
        </tr>
    </thead>
    <tbody>
        <div class="pagination" style="overflow:hidden;float:right;padding-bottom:10px;">
            <div>
                @ViewData["PaginationSummary"]
                @Html.ActionLink("Prev",
                    "List",
                    "ReviewOnDoctor",
                    new { pagenum= ((int)ViewData["pagenum"]-1)}
                    )
                |
                @Html.ActionLink("Next",
                    "List",
                    "ReviewOnDoctor",
                    new { pagenum = ((int)ViewData["pagenum"] + 1) }
                    )
            </div>
        </div>
        <br />
        @foreach (var item in Model)
        {
            <tr>
                <td class="alert-title-table" colspan="2">
                    @Html.DisplayFor(modelItem => item.Physician.physicianName)
                </td>
                <td class="alert-title-table" colspan="2">
                    @Html.DisplayFor(modelItem => item.Message)
                </td>
                <td class="alert-title-table" colspan="2">
                    <a asp-action="Edit" asp-route-id="@item.ReviewId">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.ReviewId">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.ReviewId">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
